temp=$(basename $0)
tmp_file=$(mktemp -q /tmp/${temp}.XXXXXX)
if [ $? -ne 0 ]; then
    echo "$0: Can't create temp file, using vim instead..."
    vim "$1"
    exit $?
    fi
echo "cat > $tmp_file > $1"
cat > "$tmp_file"
ret=$?
echo
if [ $ret -eq 0 ]; then
    cat "$tmp_file" > "$1"
    exit $?
    fi
exit $ret
